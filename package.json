{
  "name": "todo-list",
  "version": "1.0.0",
  "description": "Todo List Application",
  "private": true,
  "scripts": {
    "build": "cd backend && npm run build && cd ../frontend && npm run build",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "db:up": "docker-compose up -d db",
    "db:down": "docker-compose down",
    "db:logs": "docker-compose logs -f db",
    "db:stop": "docker-compose stop db",
    "db:restart": "docker-compose restart db",
    "install": "cd backend && npm install && cd ../frontend && npm install",
    "clean": "rm -rf node_modules && cd backend && rm -rf node_modules dist && cd ../frontend && rm -rf node_modules dist",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5"
  }
}
