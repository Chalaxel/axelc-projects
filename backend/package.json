{
  "name": "p3rf-backend",
  "version": "1.0.0",
  "description": "P3RF Backend",
  "license": "UNLICENSED",
  "private": true,
  "main": "dist/backend/src/server.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node dist/backend/src/server.js",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/server.ts",
    "clean": "rm -rf dist",
    "migrate": "ts-node -r tsconfig-paths/register src/scripts/runMigrations.ts",
    "migrate:status": "ts-node -r tsconfig-paths/register src/scripts/migrationStatus.ts",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,json}\""
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "sequelize": "^6.35.0",
    "umzug": "^3.2.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitest/ui": "^2.1.8",
    "eslint": "^8.57.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.0",
    "vitest": "^2.1.8"
  }
}
