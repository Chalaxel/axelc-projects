# Database Configuration
# These are global settings used by all apps unless overridden by app-specific variables

# PostgreSQL Connection (matches docker-compose.yaml)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=monorepo
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false

# App-specific database configuration (optional)
# If you want todo-list to use a different database, uncomment and configure:
# TODO_LIST_DB_HOST=localhost
# TODO_LIST_DB_PORT=5432
# TODO_LIST_DB_NAME=monorepo
# TODO_LIST_DB_USER=postgres
# TODO_LIST_DB_PASSWORD=password
# TODO_LIST_DB_SSL=false

# Server Configuration
PORT=3000
NODE_ENV=development

# Enabled Apps (comma-separated list)
ENABLED_APPS=template,todo-list
