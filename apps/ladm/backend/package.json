{
  "name": "@monorepo/app-ladm-backend",
  "version": "1.0.0",
  "description": "Backend for ladm app",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "migrate": "NODE_OPTIONS=--max-old-space-size=16384 ts-node ./node_modules/.bin/sequelize db:migrate --debug",
    "migrate:undo": "NODE_OPTIONS=--max-old-space-size=16384 ts-node ./node_modules/.bin/sequelize db:migrate:undo --debug",
    "migrate:undo:all": "NODE_OPTIONS=--max-old-space-size=16384 ts-node ./node_modules/.bin/sequelize db:migrate:undo:all --debug",
    "migrate:status": "npx sequelize-cli db:migrate:status",
    "migration:create": "npx sequelize-cli migration:generate --name",
    "seed": "npx sequelize-cli db:seed:all",
    "seed:undo": "npx sequelize-cli db:seed:undo:all",
    "test:email": "ts-node src/utils/test-email.ts"
  },
  "dependencies": {
    "@monorepo/shared-types": "file:../../../packages/shared-types",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.3",
    "axios": "^1.13.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.10",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.35.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/lodash": "^4.17.0",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/sequelize": "^4.28.18",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "sequelize-cli": "^6.6.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.0"
  }
}
