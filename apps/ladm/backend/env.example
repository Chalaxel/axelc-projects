# Configuration de la base de données
POSTGRESQL_ADDON_HOST=localhost
POSTGRESQL_ADDON_PORT=5432
POSTGRESQL_ADDON_DB=myapp
POSTGRESQL_ADDON_USER=postgres
POSTGRESQL_ADDON_PASSWORD=your_password_here
DB_SSL=false

# Configuration du serveur
NODE_ENV=development
PORT=3000

# Configuration SMTP pour l'envoi d'emails
# Pour YAHOO :
# 1. Allez sur : https://login.yahoo.com/myaccount/security
# 2. Cliquez sur "Générer un mot de passe d'application"
SMTP_HOST=smtp.mail.yahoo.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=votre-email@yahoo.fr
SMTP_PASS=votre-mot-de-passe-application

# Email du vendeur (reçoit les notifications de nouvelles commandes)
SELLER_EMAIL=vendeur@example.com

# URL du frontend (pour les liens dans les emails)
FRONTEND_URL=http://localhost:5173

# Configuration SumUp (optionnel - pour les paiements en ligne)
# SUMUP_API_KEY=your_sumup_api_key
# SUMUP_MERCHANT_CODE=your_merchant_code

